<%=stylesheet_link_tag "login"%>
<div id="fundo-tela">
    <div id="fundo-login">
        <div id="logo">
            <%= image_tag('logo_uenf.svg') %>
        </div>
        <h3 id="titulo-login">Atividades Curriculares de Extensão</h3>
        <% if flash[:alert] %>
            <div id="erro"><svg style="padding-right: 5px" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><style>svg{fill:#e52207}</style><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"/></svg><%= flash[:alert]%></div>          
        <%end%>
        <%= form_with url: sign_in_path do |form|%>
        <div id="field-email">
            <%= form.text_field :email,placeholder: "E-mail"%>
        </div>
        <div id="field-senha">
            <%= form.password_field :password,placeholder: "Senha"%><br>
        </div>
        <div id="links-wrapper">
            <%= link_to "Esqueceu sua senha?", password_reset_path, class: "link" %>
            <div id="cadastro">Não possui conta? <%= link_to "Cadastre-se", sign_up_path, class: "link" %></div>
        </div>
        <div id="btn-wrapper"><%= form.submit "Entrar", id: "btnEntrar"%></div>
    <%end%>
    </div>
</div>
