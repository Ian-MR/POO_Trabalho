<h1>Sign in</h1>
<% if @login_erro %>
    <div>email ou senha incorreto</div>
    <% @login_erro = false%>
<%end%>
<%= form_with url: sign_in_path do |form|%>
    <div>
        <%= form.label :email%>
        <%= form.text_field :email%>
    </div>
    <div>
        <%= form.label :password, "Senha"%>
        <%= form.password_field :password%><br>
        <%= link_to "Esqueceu sua senha?", password_reset_path %>
        <div>NÃ£o possui conta? <%= link_to "Cadastre-se", sign_up_path %></div>
    </div>

    <%= form.submit "Entrar"%>
<%end%>