<%@aluno = Aluno.new%>
        <%@aluno.usuario = Usuario.new%>
        <%= form_with model: @aluno, url: "/sign_up/aluno",id:"formA" do |form_aluno| %>
            <%= fields_for :usuario do |form_usuario| %>
               <div class="wrapper">
                    <%= form_usuario.text_field :nome , class:"text-input", placeholder:"Nome Completo"%>
                </div>
        
                <div class="wrapper">
                    <%= form_usuario.text_field :email , class:"text-input", placeholder:"E-mail"%>
                </div>
        
                <div class="wrapper">
                    <%= form_usuario.text_field :matricula, class:"text-input", placeholder:"Matricula" %>
                </div>
        
                <div class="wrapper">
                    <%= form_usuario.text_field :telefone, class:"text-input", placeholder:"Telefone" %>
                </div>
        
                <div class="wrapper">
                    <%= form_usuario.password_field :password, class:"text-input", placeholder:"Senha" %>
                </div>
                <div class="wrapper">
                    <%= form_usuario.password_field :password_confirmation, class:"text-input", placeholder:"Confirmação da senha" %>
                </div>
            <% end %>
            <div class="wrapper">
                <%= form_aluno.text_field :curso, class:"text-input", placeholder:"Curso" %>
            </div>
            <div class="wrapper">
                <%= form_aluno.submit "Cadastrar", id: "btnCadastrar" %>
            </div>
        <% end %>